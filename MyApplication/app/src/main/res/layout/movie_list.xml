<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    android:layout_marginBottom="15dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:paddingTop="20dp"
    card_view:cardCornerRadius="5dp"
    android:descendantFocusability="blocksDescendants"
    >

    <RelativeLayout
        android:layout_width="match_parent" android:layout_height="200dp">

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_rating"
            android:layout_above="@+id/btn_detail"
            android:layout_alignLeft="@+id/txt_deskripsi"
            android:layout_alignStart="@+id/txt_deskripsi"
            android:layout_marginBottom="15dp" />

        <Button
            android:text="Lihat Detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_detail"
            android:background="@drawable/warnabutton"
            android:textColor="@color/cardview_light_background"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            />

        <ImageView
            android:layout_width="120dp"
            android:layout_height="140dp"
            card_view:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/imageView"
            android:layout_alignBottom="@+id/txt_rating"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"/>

        <TextView
            android:text="Judul"
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_judul"
            android:textColor="@drawable/warnabutton"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/imageView"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:text="Deskripsi"
            android:layout_width="200dp"
            android:layout_height="85dp"
            android:id="@+id/txt_deskripsi"
            android:paddingBottom="20dp"
            android:layout_above="@+id/txt_rating"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@+id/imageView"
            android:layout_toEndOf="@+id/imageView"
            android:layout_marginTop="10dp"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>